[Unit]
Description=EdgeOS mDNS Setup
After=network.target edgeos-usbgadget.service edgeos-uuid-generate.service edgeos-device-name-generate.service edgeos-etc-binds.service
Before=avahi-daemon.service
Wants=edgeos-etc-binds.service

[Service]
Type=oneshot
ExecStart=/usr/bin/update-mdns-uuid.sh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target