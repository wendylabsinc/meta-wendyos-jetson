#!/bin/bash

# Colors
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

cat << "EOF"
                      XXX
          X         XXXXXXX
        XXXXX     XXXXXXXXXXX
      XXXXXXXXX XXXXXXXXXXXXXXX
    XXXXX   XXXXXXXXXXXXXXXXXXXXX            XXXXX  XXXX   XXXX XXXXXXXXXX XXXXX   XXXX XXXXXXXXXXX XXXXX   XXXXX
  XXXXX     XXXXXXXXXXXXXXXXXXXXXXX           XXXX XXXXXX  XXXX XXXX       XXXXXX  XXXX XXXX   XXXXX  XXXX XXXX
XXXXX     XXXXXXXXXXXXXXXXXXXXXXXXXXX          XXXXXXXXXXXXXXX  XXXXXXXXXX XXXXXXXXXXXX XXXX     XXXX  XXXXXXX
XXXXX     XXXXXXXXXXXXXXXXXXXXXXXXXXX          XXXXXXX XXXXXX   XXXX       XXXX XXXXXXX XXXX    XXXXX   XXXX
  XXXXX     XXXXXXXXXXXXXXXXXXXXXXX             XXXXX   XXXXX   XXXXXXXXXX XXXX   XXXXX XXXXXXXXXXX     XXXX
    XXXXX   XXXXXXXXXXXXXXXXXXXXX
      XXXXXXXXX XXXXXXXXXXXXXXX
        XXXXX     XXXXXXXXXXX
          X         XXXXXXX
                      XXX
EOF

echo -e "${GREEN}Welcome to WendyOS${NC}"
echo -e "${BLUE}AI-Powered Edge Computing Platform${NC}"
echo
echo "System Information:"
echo "* $(uname -sr)"
echo
echo -e "${YELLOW}System:${NC} $(uname -srm)"
if [ -f /etc/wendyos-build-id ]; then
    echo -e "${YELLOW}Build ID:${NC} $(cat /etc/wendyos-build-id)"
fi
if [ -f /etc/wendy/version.txt ]; then
    echo -e "${YELLOW}Version:${NC} $(cat /etc/wendy/version.txt)"
fi
echo -e "${YELLOW}Hostname:${NC} $(hostname -f 2>/dev/null || hostname)"
echo
